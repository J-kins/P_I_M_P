{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "title": "Layout Viewport",
  "description": "Data-agnostic layout.viewport.mapcomp.json component",
  "properties": {
    "componentType": {
      "type": "string",
      "const": "layout.viewport"
    },
    "version": {
      "type": "string",
      "default": "1.0.0"
    },
    "id": {
      "type": "string"
    },
    "metadata": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "properties": {
      "type": "object",
      "additionalProperties": true
    },
    "bindings": {
      "type": "object",
      "properties": {
        "dataSource": {
          "type": "string"
        }
      }
    }
  },
  "required": [
    "componentType",
    "id"
  ]
}