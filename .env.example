# =============================================================================
# .env.docker-full - Use all services from Docker
# =============================================================================
PIMP_ENV=development
PIMP_APP_NAME=pimp
TZ=UTC

# Service Mode: docker, native, or hybrid
SERVICE_MODE=docker

# Web Server
WEB_PORT=8080
WEB_SSL_PORT=8443

# MySQL (Docker container)
MYSQL_HOST=mysql
MYSQL_PORT=3306
MYSQL_ROOT_PASSWORD=pimp_root_pass
MYSQL_DATABASE=pimp_db
MYSQL_USER=pimp_user
MYSQL_PASSWORD=pimp_pass

# MongoDB (Docker container)
MONGODB_HOST=mongodb
MONGODB_PORT=27017
MONGO_ROOT_USERNAME=pimp_root
MONGO_ROOT_PASSWORD=pimp_root_pass
MONGO_DATABASE=pimp_db

# Redis (Docker container)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=pimp_redis_pass

# Docker Compose Profile
COMPOSE_PROFILES=full

# =============================================================================
# .env.native - Use all services from host machine
# =============================================================================
# PIMP_ENV=development
# PIMP_APP_NAME=pimp
# TZ=UTC

# Service Mode: docker, native, or hybrid
# SERVICE_MODE=native

# Web Server (Native Apache/Nginx)
# WEB_PORT=80
# WEB_SSL_PORT=443

# MySQL (Native installation)
# MYSQL_HOST=127.0.0.1
# MYSQL_PORT=3306
# MYSQL_ROOT_PASSWORD=your_native_root_pass
# MYSQL_DATABASE=pimp_db
# MYSQL_USER=pimp_user
# MYSQL_PASSWORD=pimp_pass

# MongoDB (Native installation)
# MONGODB_HOST=127.0.0.1
# MONGODB_PORT=27017
# MONGO_ROOT_USERNAME=pimp_root
# MONGO_ROOT_PASSWORD=pimp_root_pass
# MONGO_DATABASE=pimp_db

# Redis (Native installation)
# REDIS_HOST=127.0.0.1
# REDIS_PORT=6379
# REDIS_PASSWORD=pimp_redis_pass

# Docker Compose Profile (only start app container)
# COMPOSE_PROFILES=app-only

# =============================================================================
# .env.hybrid - Mix of Docker and native services
# =============================================================================
# PIMP_ENV=development
# PIMP_APP_NAME=pimp
# TZ=UTC

# Service Mode: docker, native, or hybrid
# SERVICE_MODE=hybrid

# Web Server (Docker)
# WEB_PORT=8080
# WEB_SSL_PORT=8443

# MySQL (Native - already installed on host)
# MYSQL_HOST=host.docker.internal  # Special Docker hostname for host machine
# MYSQL_PORT=3306
# MYSQL_ROOT_PASSWORD=your_native_root_pass
# MYSQL_DATABASE=pimp_db
# MYSQL_USER=pimp_user
# MYSQL_PASSWORD=pimp_pass

# MongoDB (Docker container)
# MONGODB_HOST=mongodb
# MONGODB_PORT=27017
# MONGO_ROOT_USERNAME=pimp_root
# MONGO_ROOT_PASSWORD=pimp_root_pass
# MONGO_DATABASE=pimp_db

# Redis (Native)
# REDIS_HOST=host.docker.internal
# REDIS_PORT=6379
# REDIS_PASSWORD=pimp_redis_pass

# Docker Compose Profile (skip MySQL since it's native)
# COMPOSE_PROFILES=app-only

